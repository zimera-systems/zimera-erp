<data>
    <xpath expr="//field[@name='unit_price']" position="before">
        <field name="base_price" optional="1"/>
        <field name="discount_rate" factor="100" optional="1">
            <suffix name="discount_rate" string="%"/>
        </field>
        <field name="discount_amount" optional="1"/>
    </xpath>
</data>
